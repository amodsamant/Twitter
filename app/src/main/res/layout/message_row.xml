<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivUserMR"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        tools:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>


    <TextView
        android:id="@+id/tvUsernameMR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/ivUserMR"
        android:layout_toRightOf="@id/ivUserMR"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Name"/>

    <ImageView
        android:id="@+id/ivVerifiedBR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@drawable/ic_verified_user"
        android:layout_alignTop="@+id/tvUsernameMR"
        android:layout_toEndOf="@+id/tvUsernameMR" />

    <TextView
        android:id="@+id/tvScreenNameMR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/twitterDarkerGrey"
        android:textSize="14sp"
        android:text="\@ name"
        android:layout_alignTop="@+id/ivVerifiedBR"
        android:layout_toEndOf="@+id/ivVerifiedBR" />

    <TextView
        android:id="@+id/tvSinceTimeMR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/twitterDarkerGrey"
        android:text="Time"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tvTextMR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="text to display 140chars"
        android:layout_below="@+id/tvUsernameMR"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/ivUserMR"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/ivUserMR" />

    <ImageView
        android:id="@+id/ivTweetMR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tvTextMR"
        android:layout_below="@id/tvTextMR"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/ivUserMR"
        tools:srcCompat="@mipmap/ic_launcher"
        android:scaleType="fitXY"

        />


</RelativeLayout>